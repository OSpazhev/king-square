<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SinglePlayerGameController">
   <children>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <HBox prefHeight="284.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <TableView fx:id="tablePlayingField" prefHeight="283.0" prefWidth="300.0" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <columns>
                            <TableColumn prefWidth="50.0" />
                            <TableColumn prefWidth="50.0" text="X1" />
                              <TableColumn prefWidth="50.0" text="X2" />
                              <TableColumn prefWidth="50.0" text="X3" />
                              <TableColumn prefWidth="50.0" text="X4" />
                              <TableColumn prefWidth="50.0" text="X5" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <VBox alignment="CENTER" prefHeight="283.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label fx:id="labelNameOfTheMovingPlayer" alignment="CENTER" prefHeight="54.0" prefWidth="300.0" text="Зараз хід гравця: " />
                              <Button fx:id="btnMakeMove" mnemonicParsing="false" onAction="#showDialogMoveOfThePlayer" prefHeight="40.0" prefWidth="240.0" text="Зробити хід">
                                 <opaqueInsets>
                                    <Insets top="20.0" />
                                 </opaqueInsets>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Button>
                              <Button fx:id="btnSkipMove" mnemonicParsing="false" prefHeight="40.0" prefWidth="240.0" text="Пропустити хід">
                                 <opaqueInsets>
                                    <Insets top="20.0" />
                                 </opaqueInsets>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Button>
                              <Button fx:id="btnGiveUp" mnemonicParsing="false" prefHeight="40.0" prefWidth="240.0" text="Здатися">
                                 <opaqueInsets>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </opaqueInsets>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <AnchorPane maxHeight="70.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" maxHeight="70.0" prefHeight="70.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <Label fx:id="labelNameOfThePlayer" alignment="CENTER" contentDisplay="CENTER" prefHeight="70.0" prefWidth="200.0" textAlignment="CENTER">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelScoresOfThePlayer" alignment="CENTER" prefHeight="70.0" prefWidth="80.0" text="0" textAlignment="CENTER">
                     <font>
                        <Font size="48.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" prefHeight="70.0" prefWidth="40.0" text=":">
                     <font>
                        <Font size="48.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelScoresOfPC" alignment="CENTER" prefHeight="70.0" prefWidth="80.0" text="0" textAlignment="CENTER">
                     <font>
                        <Font size="48.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelNameOfPC" alignment="CENTER" contentDisplay="CENTER" prefHeight="70.0" prefWidth="200.0" text="Комп'ютер" textAlignment="CENTER">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <HBox prefHeight="348.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <ListView fx:id="listViewWordsOfPlayer" prefHeight="240.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <ListView fx:id="listViewWordsOfPC" prefHeight="240.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</VBox>
